<% layout('../layouts/boilerplate')%>
<div class="container d-flex jutify-content-center align-items-center mt-3 mb-3">
  <div class="row">
   <div class="col-md-3 offset-md-3 col-xl-9 offset-xl-9">
    <div class="card shadow">
      <img class="card-img-top" src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" alt="">
      <div class="card-body">
        <h5 class="card-title">Register</h5>
        <form action="/register" method="POST" class="validatedForm" novalidate>
          <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input class="form-control"  name="username" id="username" autofocus required>
              <div class="valid-feedback">
                looks good!
            </div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">email</label>
              <input class="form-control"  name="email" id="email" required>
              <div class="valid-feedback">
                looks good!
            </div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">password</label>
              <input class="form-control" type="password"  name="password" id="password" required>
              <div class="valid-feedback">
                looks good!
            </div>
            </div>
            <button class="btn btn-success col-12">Register</button>
      </form>
        </div>
    </div>
  </div>
 </div>
</div>
